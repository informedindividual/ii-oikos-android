<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"    
    android:layout_height="fill_parent"
    android:background="@color/background">   
    
    <ScrollView android:id="@+id/scrollview"
		android:layout_width="fill_parent" 
		android:layout_height="fill_parent">    
		
	    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		    android:orientation="vertical"
		    android:layout_width="fill_parent"    
		    android:layout_height="wrap_content"
		    android:paddingLeft="10dip"
		    android:paddingRight="10dip"
		    android:layout_alignParentTop="true">    
		    
		   	<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    
		        android:orientation="horizontal"	
		        android:layout_marginBottom="15dip"	      
			    android:layout_width="fill_parent"    
			    android:layout_height="wrap_content"> 			    			    
			    <ImageView
			         android:id="@+id/oikos_logo"
			         android:layout_width="wrap_content"
			         android:layout_height="wrap_content"
					 android:layout_alignParentLeft="true"
		         	 android:src="@drawable/oikos_logo"/> 
		         	 
		        <TextView
		       		android:id="@+id/version_txt"
		       		android:text="@string/version"
		       		android:textSize="14dip"
				   	android:layout_width="wrap_content"
				  	android:layout_height="wrap_content" 
				   	android:textColor="@color/version_color"			  	  
				   	android:layout_marginTop="15dip"
					android:layout_alignParentRight="true"/>
	        </RelativeLayout> 
	        
		    <TextView
	       		android:id="@+id/info_text"
			   	android:layout_width="wrap_content"
			  	android:layout_height="wrap_content"		   	
			   	android:text="@string/info_text"
			   	android:textColor="@color/text_color"			  
			   	android:paddingBottom="2dip"
			   	android:textSize="17dip"
			   	android:lineSpacingExtra="1dip"
			   	android:layout_gravity="left"
		        android:gravity="left"/>
		        
		    <Button android:id="@+id/aboutOk" 
		    	android:text="@string/ok"
		     	android:layout_marginTop="20dip"
				android:layout_marginBottom="5dip"
				android:textSize="17dip"
			    android:textColor="#FFFFFF"
				android:layout_below="@+id/txtview_available"		
				android:background="@drawable/button_bg"				
				android:layout_height="wrap_content" 
				android:layout_width="fill_parent" />
		
		 </LinearLayout> 
	</ScrollView>
</RelativeLayout>